@model Projekt.Models.Lesson

@{
    ViewData["Title"] = "Edytuj";
}

<h1>Edytuj</h1>

<h4>Zajęcia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa zajęć</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTimeStarted" class="control-label">Data rozpoczęcia</label>
                <input asp-for="DateTimeStarted" class="form-control" />
                <span asp-validation-for="DateTimeStarted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTimeEnded" class="control-label">Data zakończenia</label>
                <input asp-for="DateTimeEnded" class="form-control" />
                <span asp-validation-for="DateTimeEnded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfSpace" class="control-label">Liczba miejsc</label>
                <input asp-for="AmountOfSpace" class="form-control" min="@Model?.AmountOfOccupiedSpace" />
                <span asp-validation-for="AmountOfSpace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfOccupiedSpace" class="control-label">Zajęte miejsca</label>
                <input asp-for="AmountOfOccupiedSpace" class="form-control" readonly/>
                <span asp-validation-for="AmountOfOccupiedSpace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do harmonogramu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
