@model Projekt.Models.MyLessons

@{
    ViewData["Title"] = "Dodaj";
}

<h1>Zapisz się na zajęcia</h1>

<hr />
@if (ViewBag.AreVacancies)
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LessonsId" class="control-label">Zajęcia</label>
                    <select asp-for="LessonsId" class="form-control" asp-items="ViewBag.LessonsId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zapisz się na zajęcia" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
else{
    <p>Brak wolnych zajęć</p>
}


<div>
    <a asp-action="Index">Wróć do listy swoich zajęć</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
